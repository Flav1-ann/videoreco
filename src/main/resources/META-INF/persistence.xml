<?xml version="1.0" encoding="ISO-8859-1"?>
<persistence  xmlns="http://java.sun.com/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              version="1.0"  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
              http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit  name="video-reco-jpa">
        <properties>
            <property name="org.hibernate.show.sql" value="true"/>
            <property name="org.hibernate.format.sql" value="false"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/videoreco"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="org.hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="org.hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>